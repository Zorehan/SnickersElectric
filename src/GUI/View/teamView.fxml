<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="centerBorderPane" prefHeight="506.0" prefWidth="777.0" stylesheets="@/GUI/Stylesheets/teamView.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.View.teamViewController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="81.0" prefWidth="777.0" spacing="10.0" stylesheets="@../Stylesheets/teamView.css" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="lblTeams" graphicTextGap="10.0" text="Teams">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <padding>
                        <Insets left="30.0" />
                    </padding>
                </Label>
                <Button fx:id="btnNewTeam" mnemonicParsing="false" onAction="#openTeamCreator" text="Add new team" />
                <Button fx:id="btnEditTeam" mnemonicParsing="false" onAction="#openTeamEditor" text="Edit team" />
                <Button fx:id="btnRemoveTeam" mnemonicParsing="false" onAction="#deleteSelectedTeam" text="Remove team" />
            <Button fx:id="btnAddProfile" mnemonicParsing="false" text="Add profile">
               <HBox.margin>
                  <Insets left="300.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnRemoveProfile" mnemonicParsing="false" text="Remove profile" />
            </children>
            <BorderPane.margin>
                <Insets top="-10.0" />
            </BorderPane.margin>
        </HBox>
    </top>
    <center>
        <TableView fx:id="tblViewTeams" focusTraversable="false" prefHeight="444.0" prefWidth="770.0" stylesheets="@../Stylesheets/teamView.css" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="nameColumn" editable="false" prefWidth="94.0" text="Name" />
            <TableColumn fx:id="countryColumn" editable="false" prefWidth="64.0" text="Country" />
                <TableColumn fx:id="annualSalaryColumn" editable="false" prefWidth="76.0" text="Annual salary" />
                <TableColumn fx:id="fixedAnnualAmountColumn" editable="false" prefWidth="74.0" text="Annual amount" />
                <TableColumn fx:id="annualWorkingHoursColumn" editable="false" prefWidth="94.0" text="Working hours" />
                <TableColumn fx:id="overheadColumn" editable="false" minWidth="9.0" prefWidth="88.0" text="Overhead (%)" />
                <TableColumn fx:id="utilizationColumn" editable="false" prefWidth="95.0" text="Utilization (%)" />
            <TableColumn fx:id="typeColumn" editable="false" prefWidth="54.0" text="Type" />
                <TableColumn fx:id="hourlyRateColumn" editable="false" prefWidth="90.0" text="Hourly Rate" />
            <TableColumn fx:id="dailyRateColumn" prefWidth="75.0" text="Daily Rate" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets top="-9.0" />
            </BorderPane.margin>
        </TableView>
    </center>
</BorderPane>
