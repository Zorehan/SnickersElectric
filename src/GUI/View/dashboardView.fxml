<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="507.0" prefWidth="777.0" stylesheets="@../Stylesheets/dashboardView.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.View.dashboardViewController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="hBox" prefHeight="499.0" prefWidth="777.0" spacing="50.0">
               <children>
                  <VBox fx:id="chartBox">
                     <children>
                        <HBox alignment="CENTER" prefHeight="31.0" prefWidth="375.0" spacing="10.0">
                           <children>
                              <Label alignment="CENTER" prefHeight="28.0" prefWidth="96.0" text="Historical Data" textAlignment="CENTER" />
                              <ComboBox fx:id="comboProfile" onAction="#clickComboProfile" prefHeight="25.0" prefWidth="138.0" promptText="Profiles" />
                              <ComboBox fx:id="comboSortType" onAction="#clickComboSortType" prefHeight="25.0" prefWidth="154.0" promptText="Sort For" />
                           </children>
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </HBox>
                        <LineChart fx:id="chart">
                          <xAxis>
                            <CategoryAxis fx:id="dateAxis" endMargin="0.0" gapStartAndEnd="false" side="BOTTOM" startMargin="0.0" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis fx:id="numAxis" side="LEFT" />
                          </yAxis>
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </VBox.margin>
                        </LineChart>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets left="40.0" top="40.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox fx:id="countryBox" prefHeight="459.0" prefWidth="358.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
                           <children>
                              <Label alignment="CENTER" prefHeight="28.0" prefWidth="96.0" text="Country Data" textAlignment="CENTER" />
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </HBox>
                        <TableView fx:id="tblCountries" prefHeight="600.0" prefWidth="438.0">
                          <columns>
                            <TableColumn fx:id="colCountry" prefWidth="75.0" text="Country" />
                            <TableColumn fx:id="colAmount" prefWidth="100.0" text="Amount (Employees)" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </TableView>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets right="40.0" top="40.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
