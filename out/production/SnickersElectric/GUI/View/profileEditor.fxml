<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="324.0" prefWidth="354.0" stylesheets="@../Stylesheets/profileCreator.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.profileEditorController">
   <children>
      <BorderPane prefHeight="344.0" prefWidth="354.0">
         <top>
            <HBox fx:id="topPanel" alignment="CENTER_LEFT" prefHeight="63.0" prefWidth="325.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="lblProfileName" text="Profile: Name">
                     <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </top>
         <right>
            <VBox prefHeight="200.0" prefWidth="162.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="lblAnnualSalary" text="Annual salary" />
                  <TextField fx:id="txtFieldAnnualSalary" />
                  <Label fx:id="lblAnnualAmount" text="Annual amount" />
                  <TextField fx:id="txtFieldAnnualAmount" />
                  <Label fx:id="lblUtilization" text="Utilization (%)" />
                  <TextField fx:id="txtFieldUtilization" />
                  <Label fx:id="lblType" text="Type" />
                  <ComboBox fx:id="comboBoxType" prefHeight="25.0" prefWidth="170.0" />
                  <HBox alignment="CENTER_RIGHT" prefHeight="46.0" prefWidth="162.0" spacing="15.0">
                     <children>
                        <Button fx:id="btnSave" contentDisplay="CENTER" mnemonicParsing="false" text="Save" onAction="#saveInformation">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin></Button>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
               </children>
               <BorderPane.margin>
                  <Insets left="10.0" right="10.0" top="15.0" />
               </BorderPane.margin>
            </VBox>
         </right>
         <left>
            <VBox prefHeight="200.0" prefWidth="162.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="lblName" text="Name" />
                  <TextField fx:id="txtFieldName" />
                  <Label fx:id="lblWorkingHours" text="Working hours" />
                  <TextField fx:id="txtFieldWorkingHours" />
                  <Label fx:id="lblOverhead" text="Overhead (%)" />
                  <TextField fx:id="txtFieldOverhead" />
                  <Label fx:id="lblCountry" text="Country" />
                  <ComboBox fx:id="comboBoxCountry" prefHeight="25.0" prefWidth="163.0" />
               </children>
               <BorderPane.margin>
                  <Insets left="10.0" top="15.0" />
               </BorderPane.margin>
            </VBox>
         </left>
      </BorderPane>
   </children>
</AnchorPane>
