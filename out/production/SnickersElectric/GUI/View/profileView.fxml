<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="centerBorderPane" prefHeight="506.0" prefWidth="777.0" stylesheets="@/GUI/Stylesheets/profilesView.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="81.0" prefWidth="777.0" spacing="10.0" stylesheets="@../Stylesheets/profilesView.css" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblProfiles" graphicTextGap="10.0" text="Profiles">
               <font>
                  <Font size="18.0" />
               </font>
               <padding>
                  <Insets left="30.0" />
               </padding>
            </Label>
            <Button fx:id="btnNewProfile" mnemonicParsing="false" text="Add new profile" />
            <Button fx:id="btnRemoveProfile" mnemonicParsing="false" text="Remove profile" />
            <Button fx:id="btnEditProfile" mnemonicParsing="false" text="Edit profile" />
         </children>
         <BorderPane.margin>
            <Insets top="-10.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <center>
      <TableView fx:id="tblViewProfiles" focusTraversable="false" prefHeight="200.0" prefWidth="770.0" stylesheets="@../Stylesheets/profilesView.css" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="nameColumn" editable="false" prefWidth="112.0" text="Name" />
            <TableColumn fx:id="annualSalaryColumn" editable="false" prefWidth="89.0" text="Annual Salary" />
            <TableColumn fx:id="fixedAnnualAmountColumn" editable="false" prefWidth="140.0" text="Fixed Annual Amount" />
            <TableColumn fx:id="annualWorkingHoursColumn" editable="false" prefWidth="142.0" text="Annual working hours" />
            <TableColumn fx:id="overheadColumn" editable="false" minWidth="9.0" prefWidth="98.0" text="Overhead (%)" />
            <TableColumn fx:id="utilizationColumn" editable="false" prefWidth="95.0" text="Utilization (%)" />
            <TableColumn fx:id="hourlyRateColumn" editable="false" prefWidth="99.0" text="Hourly Rate" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets top="-9.0" />
         </BorderPane.margin>
      </TableView>
   </center>
</BorderPane>
